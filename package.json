{
    "name": "@websnacksjs/websnacks",
    "description": "Minimal dependency server-side JSX for static sites",
    "version": "0.1.0",
    "author": {
        "name": "M. George Hansen",
        "email": "mgeorge@technopolitica.com"
    },
    "license": "MPL-2.0",
    "engines": {
        "node": ">=12"
    },
    "main": "dist/index.js",
    "types": "types.d.ts",
    "bin": "bin/websnacks.js",
    "files": [
        "/bin/websnacks.js",
        "/dist/**/*.js",
        "/dist/**/*.d.ts",
        "/dist/**/*.map",
        "/src/**/*.ts",
        "/index.d.ts"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "ts-node scripts/clean.ts",
        "prepublishOnly": "npm run clean && npm run build",
        "pretest": "npm run build",
        "test": "ts-node --project=test/tsconfig.json test/run-tests.ts"
    },
    "devDependencies": {
        "@types/node": "~12",
        "@types/ws": "^7.2.4",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "~3.9.3"
    },
    "optionalDependencies": {
        "node-watch": "^0.6.4",
        "ws": "^7.3.0"
    }
}
